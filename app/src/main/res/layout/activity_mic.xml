<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MicActivity"
    android:orientation="vertical">

    <include layout="@layout/base_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:gravity="center_horizontal"
        android:background="@drawable/icon_home_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_mic_volume"/>

        <TextView
            android:id="@+id/tv_recording"
            android:layout_width="63dp"
            android:layout_height="25dp"
            android:text="开始检测"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="31dp"
            android:background="@drawable/mic_btn_bg"/>
        
        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="31dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_retest"
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:text="重新检测"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@drawable/mic_btn_bg"/>

            <TextView
                android:id="@+id/tv_play"
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:text="播放检测"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginLeft="63dp"
                android:background="@drawable/mic_btn_bg"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mic_ok"
            android:layout_width="63dp"
            android:layout_height="25dp"
            android:text="Ok"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:layout_marginTop="31dp"
            android:background="@drawable/mic_btn_ok_bg"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>