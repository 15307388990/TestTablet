<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SPActivity">

    <include layout="@layout/base_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="153dp"
        android:background="@drawable/icon_home_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sp_volume"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="27dp">
            <ImageView
                android:id="@+id/iv_volume_reduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/icon_volume_reduction"/>
            
            <ProgressBar
                android:id="@+id/pb_volume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="100"
                style="@style/ProgressBar_Mini"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"/>

            <ImageView
                android:id="@+id/iv_volume_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/icon_volume_add"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>