<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LcdActivity">

    <include layout="@layout/base_title_layout" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/view_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="115dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_lcd_white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lcd_white" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_lcd_black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lcd_black" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_lcd_red"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lcd_red" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_lcd_green"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lcd_green" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_lcd_blue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lcd_blue" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_lcd_yellow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lcd_yellow" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>